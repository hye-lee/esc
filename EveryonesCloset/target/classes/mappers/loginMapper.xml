<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
        PUBLIC "-//maybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
        
<mapper namespace="com.pro.esc.login.dao.LoginDao">
	<select id="login" parameterType="com.pro.esc.login.UserVO" resultType="int">
		SELECT COUNT(*)
		FROM user
		<trim prefix="WHERE" prefixOverrides="AND">
			<if test="userID!=null">
				AND userID= #{userID}
			</if>
			<if test="userPw!=null">
				AND userPw=#{userPw}
			</if>
		</trim>
	</select>
</mapper>